[Unit]
Description=Incus Event Automation (labkit + contrib)
After=incus.service
Requires=incus.service

[Service]
Type=simple
User=aprksy
WorkingDirectory=/home/aprksy/workspace/homelabs/incus/labkit
Environment=PATH=/home/aprksy/workspace/homelabs/incus/labkit/.venv/bin:/usr/local/bin:/usr/bin
ExecStart=/home/aprksy/workspace/homelabs/incus/labkit/.venv/bin/python3 \
    /home/aprksy/workspace/homelabs/incus/labkit/contrib/incus-event-listener.py
Restart=always

[Install]
WantedBy=multi-user.target
